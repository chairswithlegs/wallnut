div(style='max-width: 540px; margin: auto;')
    h1 Login

    form
        .form-group
            label(for='login-username') Title
            input.form-control(type='text', id='login-username', placeholder="Username")

        .form-group
            label(for='login-password') Content
            input.form-control(type='password', id='login-password', placeholder="Password")

        button.btn.btn-primary(type='button', id='login-button') Submit

script
    include authentication-manager.js
script.
    if (authenticationManager.isAuthenticated()) {
        location.href='/admin';
    }

    var username = document.getElementById('login-username');
    var password = document.getElementById('login-password');

    document.getElementById('login-button').addEventListener('click', function(event) {
        event.preventDefault();
        authenticationManager.login(username.value, password.value, './');
    });
